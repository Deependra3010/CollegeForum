<% layout('/layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center mb-3">Answers</h1>
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= question.image%>" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= question.question %>
                    </h5>
                    <p class="card-text text-muted">
                        <%= question.category %>
                    </p>
                    <p class="card-text">
                        <%= question.description %>
                    </p>
                </div>
                <div class="card-body">
                    <a href="/questions/<%= question._id %>/edit" class="card-link btn btn-warning">Edit</a>

                    <form action="/Questions/<%= question._id%>?_method=DELETE" method="post" class="d-inline">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>

                <div class="card-footer text-muted">
                    <a href="/questions">Back to All Questions</a>
                </div>
            </div>
        </div>
    </div>